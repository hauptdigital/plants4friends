{
    "name": "plants4friends",
    "version": "1.0.0",
    "description": "swap plants online",
    "main": "server.js",
    "scripts": {
        "tsc": "tsc",
        "test": "jest",
        "dev-client": "cd client && npm run start",
        "dev-storybook": "cd client && npm run storybook",
        "dev-server": "ts-node-dev --respawn --transpileOnly ./src/server.ts",
        "dev": "concurrently --kill-others-on-fail \"npm run dev-server\" \"npm run dev-client\" \"npm run dev-storybook\"",
        "prod-prebuild": "npm run install && cd client && npm run install",
        "prod-build": "tsc && cd client && npm run build && npm run build-storybook",
        "lint": "eslint '*/**/*.{js,ts,tsx}' --quiet"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/hauptdigital/plants4friends.git"
    },
    "author": "Marc Haupt",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/hauptdigital/plants4friends/issues"
    },
    "homepage": "https://github.com/hauptdigital/plants4friends#readme",
    "dependencies": {
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "mongodb": "^3.5.9"
    },
    "devDependencies": {
        "@babel/core": "^7.10.3",
        "@babel/preset-env": "^7.10.3",
        "@babel/preset-typescript": "^7.10.1",
        "@types/express": "^4.17.6",
        "@types/jest": "^26.0.0",
        "@types/mongodb": "^3.5.23",
        "@types/node": "^14.0.13",
        "@typescript-eslint/eslint-plugin": "^3.3.0",
        "@typescript-eslint/parser": "^3.3.0",
        "babel-jest": "^26.0.1",
        "concurrently": "^5.2.0",
        "eslint": "^7.3.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-prettier": "^3.1.4",
        "eslint-plugin-react": "^7.20.0",
        "husky": "^4.2.5",
        "jest": "^26.0.1",
        "lint-staged": "^10.2.11",
        "prettier": "^2.0.5",
        "ts-jest": "^26.1.0",
        "ts-node-dev": "^1.0.0-pre.49",
        "typescript": "^3.9.5"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,ts,jsx}": "eslint --fix",
        "*.{js,jsx,ts,tsx,md,html,css}": "prettier --write"
    },
    "jest": {
        "testEnvironment": "node",
        "coveragePathIgnorePatterns": [
            "/node_modules/"
        ]
    }
}
