{
    "compilerOptions": {
        /* Basic Options */
        "target": "es5",
        "module": "commonjs",
        "outDir": "./build",
        "jsx": "react",

        /* Strict Type-Checking Options */
        "strict": true,
        "esModuleInterop": true,

        /* Advanced Options */
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*", "client/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
